#!/usr/bin/env bash
# script to install nginx and then return a page with a string 'Hello World'
# We are make sure that the '/redirect_me' url is a permanent redirect

sudo apt-get update
sudo apt-get install -y nginx

mkdir /var/www/html
touch /var/www/html/index.nginx-debian.html
sudo chown -R ubuntu /var/www
echo "Hello World!" > /var/www/html/index.nginx-debian.html

sudo sed -i "30i $ADD301_REDIRECT" /etc/nginx/sites-available/default

sudo service nginx start
